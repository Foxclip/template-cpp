{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S", ".",
        "-B", "build",
        "-G", "Visual Studio 17 2022"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "CMake Build Debug",
      "dependsOn": ["CMake Configure"],
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--config", "Debug"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "CMake Build Release",
      "dependsOn": ["CMake Configure"],
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "build", "--config", "Release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
